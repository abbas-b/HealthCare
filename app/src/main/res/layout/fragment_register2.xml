<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.doubleteam.healthcare.activity.Register2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_weight="5">
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="athlete"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/sw_athlete"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="#eee" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/spinner_days"
            android:layout_alignTop="@+id/textView"
            android:layout_alignRight="@+id/sw_athlete"
            android:layout_alignEnd="@+id/sw_athlete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many days"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/sw_athlete"
            android:layout_alignLeft="@+id/sw_athlete"
            android:layout_alignStart="@+id/sw_athlete"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_primary"
            android:inputType="phone"
            android:ems="13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primary Phone"
            android:layout_below="@+id/et_doctor"
            android:layout_alignLeft="@+id/et_doctor"
            android:layout_alignStart="@+id/et_doctor"
            android:layout_alignRight="@+id/et_doctor"
            android:layout_alignEnd="@+id/et_doctor"
            android:layout_marginTop="25dp" />

        <EditText
            android:id="@+id/et_secondary"
            android:inputType="phone"
            android:ems="13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Secondary Phone"
            android:layout_below="@+id/et_primary"
            android:layout_alignRight="@+id/et_primary"
            android:layout_alignEnd="@+id/et_primary"
            android:layout_alignLeft="@+id/et_primary"
            android:layout_alignStart="@+id/et_primary"
            android:layout_marginTop="25dp" />

        <EditText
            android:id="@+id/et_doctor"
            android:inputType="phone"
            android:ems="13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doctor's Phone"
            android:layout_below="@+id/textView"
            android:layout_marginTop="30dp"
            android:layout_alignRight="@+id/sw_athlete"
            android:layout_alignEnd="@+id/sw_athlete"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_gravity="right|top" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REGISTER"
            android:id="@+id/btn_reg"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>
